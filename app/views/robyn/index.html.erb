<div class>

<%= form_tag('/robyn/index', :method => 'GET', :id => 'main-search') do %>

  <div class="search-block">
  <%= text_field_tag :search_value, params['search_value'], 
                     :class => 'typeahead', 
                     :placeholder => 'Type a search' %>
  </div>
  


<% end %>

<% if @songs.present? %>

<h2>Songs</h2>
<ul>
  <% for song in @songs %>
    <li> <%= link_to song.Song, song_path(song) %> </li>
  <% end %>
</ul>


<% end %>


<% if @gigs.present? %>

<h2>Gigs</h2>
<ul>
  <% for gig in @gigs %>
    <li> <%= link_to "#{gig.Venue} (#{gig.GigDate.to_date.to_formatted_s(:long)})", gig_path(gig) %> </li>
  <% end %>
</ul>

<% end %>

<% if @compositions.present? %>

<h2>Compositions</h2>
<ul>
  <% for comp in @compositions %>
    <li> <%= link_to comp.Title, composition_path(comp) %> </li>
  <% end %>
</ul>


<% end %>

</div>